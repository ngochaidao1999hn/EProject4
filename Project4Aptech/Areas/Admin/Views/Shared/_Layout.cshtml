@using Project4Aptech.Models
@{
    Users u = (Users)Session["user"];
 }
<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="Content-Language" content="en">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, shrink-to-fit=no" />
    <meta name="description" content="This is an example dashboard created using build-in elements and components.">
    <meta name="msapplication-tap-highlight" content="no">
    <link href="~/Content/AdminStyle/css/layout.css" rel="stylesheet">
    <script type="text/javascript" src="~/Scripts/main.js"></script>
  
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body >
    <div class="app-container app-theme-white body-tabs-shadow fixed-sidebar fixed-header">
        <div class="app-header header-shadow">
            <div class="app-header__logo">
                <div class="logo-src"><a href="~/Admin/Home/"><img src="~/Content/AdminStyle/images/Logo-TPB.png" height="23px" width="97px" /></a></div>
                <div class="header__pane ml-auto">
                    <div>
                        <button type="button" class="hamburger close-sidebar-btn hamburger--elastic" data-class="closed-sidebar">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="app-header__mobile-menu">
                <div>
                    <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                        <span class="hamburger-box">
                            <span class="hamburger-inner"></span>
                        </span>
                    </button>
                </div>
            </div>
            <div class="app-header__content">
                <div class="app-header-left">
                                   
                </div>
                <div class="app-header-right">
                    <div class="header-btn-lg pr-0">
                        <div class="widget-content p-0">
                            <div class="widget-content-wrapper">
                                <div class="widget-content-left">
                                    <div class="btn-group">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">@u.UserName </a>
                                        <ul class="dropdown-menu" role="menu">
                                            <li><a href="~/Admin/Users/Details/@u.id">Thông tin tài khoản</a></li>
                                           
                                            <li><a href="~/Admin/Home/Logout" style="color:red;">Đăng xuất</a></li>

                                        </ul>
                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>          <div class="app-main">
            <div class="app-sidebar sidebar-shadow">
                <div class="app-header__logo">
                    <div class="logo-src"></div>
                    <div class="header__pane ml-auto">
                        <div>
                            <button type="button" class="hamburger close-sidebar-btn hamburger--elastic" data-class="closed-sidebar">
                                <span class="hamburger-box">
                                    <span class="hamburger-inner"></span>
                                </span>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="app-header__mobile-menu">
                    <div>
                        <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
                <div class="app-header__menu">
                    <span>
                        <button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                            <span class="btn-icon-wrapper">
                                <i class="fa fa-ellipsis-v fa-w-6"></i>
                            </span>
                        </button>
                    </span>
                </div>    <div class="scrollbar-sidebar">
                    <div class="app-sidebar__inner">
                        <ul class="vertical-nav-menu">
                            
                            
                            <li class="app-sidebar__heading">Tài Khoản</li>
                            <li>
                                <a href="~/Admin/Accounts">
                                    <i class="metismenu-icon pe-7s-diamond"></i>
                                    Tài Khoản
                                    <i class="metismenu-state-icon pe-7s-angle-down caret-left"></i>
                                </a>
                                <ul>
                                    
                                    <li>
                                        <a href="~/Admin/Accounts/">
                                            <i class="metismenu-icon">
                                            </i>Danh sách
                                        </a>
                                    </li>
                                    <li>
                                        <a href="~/Admin/Accounts/ResetPass">
                                            <i class="metismenu-icon">
                                            </i>Reset Mật khẩu
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="app-sidebar__heading">Khách hàng</li>
                            <li>
                                <a href="~/Admin/Customers">
                                    <i class="metismenu-icon pe-7s-display2"></i>
                                    Danh sách
                                </a>
                                <a href="~/Admin/Customers/Create">
                                    <i class="metismenu-icon pe-7s-display2"></i>
                                    Tạo mới
                                </a>
                                <a href="~/Admin/Customers/AddBalance">
                                    <i class="metismenu-icon pe-7s-display2"></i>
                                    Chuyển tiền
                                </a>
                            </li>
                            @if (u.Roll_id == 3)
                            {
                                <li class="app-sidebar__heading">Nhân viên</li>
                                <li>
                                    <a href="~/Admin/Users">
                                        <i class="metismenu-icon pe-7s-display2"></i>
                                        Danh sách
                                    </a>
                                    <a href="~/Admin/Users/Create">
                                        <i class="metismenu-icon pe-7s-display2"></i>
                                      Tạo mới
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>    <div class="app-main__outer">
                <div class="app-main__inner">
                    @RenderBody()
                </div>
                
            </div>
            <script src="http://maps.google.com/maps/api/js?sensor=true"></script>
        </div>
    </div>
  
   
</body>
</html>
@*@Scripts.Render("~/bundles/jquery")*@
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)